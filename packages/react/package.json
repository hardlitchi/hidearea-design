{
  "name": "@hidearea-design/react",
  "version": "0.1.0",
  "description": "React wrapper for hidearea-design components",
  "repository": {
    "type": "git",
    "url": "https://github.com/hardlitchi/hidearea-design.git",
    "directory": "packages/react"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "react",
    "web-components",
    "design-system",
    "ui-components"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "happy-dom": "^20.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.7.2",
    "vite": "^5.2.0",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@hidearea-design/core": "workspace:*",
    "@lit/react": "^1.0.8"
  },
  "sideEffects": false
}
