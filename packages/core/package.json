{
  "name": "@hidearea-design/core",
  "version": "0.1.0",
  "description": "Web Components core library for hidearea-design",
  "repository": {
    "type": "git",
    "url": "https://github.com/hardlitchi/hidearea-design.git",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./metadata": {
      "types": "./dist/metadata-index.d.ts",
      "import": "./dist/metadata-index.js"
    },
    "./types/metadata": {
      "types": "./dist/types/metadata.d.ts",
      "import": "./dist/types/metadata.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch",
    "prebuild": "node scripts/collect-metadata.mjs",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.spec.ts'",
    "clean": "rm -rf dist node_modules",
    "metadata": "node scripts/collect-metadata.mjs"
  },
  "keywords": [
    "web-components",
    "design-system",
    "ui-components"
  ],
  "license": "MIT",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^8.57.0",
    "happy-dom": "^20.0.10",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@hidearea-design/tokens": "workspace:*"
  }
}
