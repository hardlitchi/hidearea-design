{
  "name": "@hidearea-design/core",
  "version": "0.0.0",
  "description": "Web Components core library for hidearea-design",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "web-components",
    "design-system",
    "ui-components"
  ],
  "license": "MIT",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@hidearea-design/tokens": "workspace:*"
  }
}
