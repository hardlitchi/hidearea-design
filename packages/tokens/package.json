{
  "name": "@hidearea-design/tokens",
  "version": "0.0.0",
  "description": "Design tokens for hidearea-design",
  "type": "module",
  "main": "./build/js/index.js",
  "module": "./build/js/index.js",
  "types": "./build/ts/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/ts/index.d.ts",
      "import": "./build/js/index.js"
    },
    "./css": "./build/css/variables.css",
    "./css/variables": "./build/css/variables.css",
    "./css/components/*": "./build/css/components/*.css",
    "./styles": {
      "types": "./build/js/styles/index.d.ts",
      "import": "./build/js/styles/index.js"
    },
    "./styles/*": {
      "types": "./build/js/styles/*.d.ts",
      "import": "./build/js/styles/*.js"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "node config.mjs",
    "clean": "rm -rf build node_modules",
    "perf:bundle": "node scripts/measure-bundle-size.mjs",
    "perf:report": "node scripts/generate-perf-report.mjs",
    "perf": "npm run perf:bundle && npm run perf:report",
    "changes": "node scripts/detect-token-changes.mjs",
    "changes:json": "node scripts/detect-token-changes.mjs --format json",
    "changes:markdown": "node scripts/detect-token-changes.mjs --format markdown",
    "figma:sync": "node scripts/figma-sync.mjs --api",
    "figma:import": "node scripts/figma-sync.mjs --import",
    "figma:validate": "node scripts/figma-sync.mjs --validate"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "style-dictionary"
  ],
  "license": "MIT",
  "devDependencies": {
    "style-dictionary": "^4.0.0",
    "yaml": "^2.8.1"
  }
}
