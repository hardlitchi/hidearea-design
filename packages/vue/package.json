{
  "name": "@hidearea-design/vue",
  "version": "0.1.0",
  "description": "Vue 3 wrapper for hidearea-design components",
  "repository": {
    "type": "git",
    "url": "https://github.com/hardlitchi/hidearea-design.git",
    "directory": "packages/vue"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "vue",
    "vue3",
    "web-components",
    "design-system",
    "ui-components"
  ],
  "license": "MIT",
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "@vue/test-utils": "^2.4.6",
    
    "happy-dom": "^20.0.10",
    "typescript": "^5.7.2",
    "vite": "^5.2.0",
    "vitest": "^4.0.8",
    "vue": "^3.4.21"
  },
  "dependencies": {
    "@hidearea-design/core": "workspace:*"
  }
}
