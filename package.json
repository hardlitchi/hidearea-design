{
  "name": "hidearea-design",
  "version": "0.0.0",
  "private": true,
  "description": "Web Component-based design system for Vanilla JS, React, and Vue",
  "repository": {
    "type": "git",
    "url": "https://github.com/hidearea-design/hidearea-design.git"
  },
  "license": "MIT",
  "author": "hidearea",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build && changeset publish",
    "storybook:deploy": "pm2 stop DesignStorybook | pm2 delete DesignStorybook | pm2 serve ./packages/storybook/storybook-static 6006 --name DesignStorybook",
    "docs:deploy": "pm2 stop DesignDocs | pm2 delete DesignDocs | pm2 serve ./packages/docs/.vitepress/dist 5174 --name DesignDocs"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@changesets/cli": "^2.29.7",
    "@storybook/addon-a11y": "^10.1.2",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "axe-core": "^4.11.0",
    "eslint": "^8.57.1",
    "prettier": "^3.2.5",
    "turbo": "^2.6.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@playwright/test": "^1.57.0"
  }
}
