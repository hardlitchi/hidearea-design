{
  "name": "hidearea-design",
  "version": "0.0.0",
  "private": true,
  "description": "Web Component-based design system for Vanilla JS, React, and Vue",
  "repository": {
    "type": "git",
    "url": "https://github.com/hardlitchi/hidearea-design.git"
  },
  "license": "MIT",
  "author": "hidearea",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "docs:api": "tsx scripts/generate-api-docs.ts",
    "perf:analyze": "tsx scripts/analyze-bundle-sizes.ts",
    "perf:tree-shaking": "tsx scripts/analyze-tree-shaking.ts",
    "perf:benchmark": "tsx scripts/performance-benchmark.ts",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build && changeset publish",
    "rebuild:deploy": "pnpm install && turbo run clean && pnpm install && turbo run build --force && pm2 restart DesignStorybook hideareaDesignDocs designTokenExample",
    "storybook:deploy": "pm2 stop DesignStorybook | pm2 delete DesignStorybook | pm2 serve ./packages/storybook/storybook-static 6006 --name DesignStorybook",
    "docs:deploy": "pm2 stop DesignDocs | pm2 delete DesignDocs | pm2 serve ./packages/docs/.vitepress/dist 5174 --name DesignDocs",
    "git:reflesh": "git checkout main && git pull && git fetch -p && git branch"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.17.0",
    "@storybook/addon-a11y": "^10.1.10",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "axe-core": "^4.11.0",
    "eslint": "^9.17.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.18",
      "@types/react-dom": "^18.3.5"
    }
  },
  "dependencies": {
    "@hidearea-design/core": "link:packages/core",
    "@hidearea-design/mcp-server": "link:packages/mcp-server",
    "@hidearea-design/tokens": "link:packages/tokens",
    "@playwright/test": "^1.57.0"
  }
}
